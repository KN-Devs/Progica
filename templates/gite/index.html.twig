{% extends 'base.html.twig' %}

{% block title %}Gite{% endblock %}

{% block body %}
<div class="flex-fill d-flex flex-column justify-content-center align-items-center m-20">
    <h1>{{ gite.nom }}</h1>
    <div class=" gite-content flex-fill d-flex flex-row justify-content-center align-items-center m-20">
        <div class="gite_picture flex-fill d-flex">  
            <img src="{{ gite.image}}" alt="">
        </div>
        <div class=" d-flex flex-fill flex-column justify-content-center align-items-start p-10">
            <h2>Description</h2>
            <ul class="d-flex flex-column justify-content-center align-items-start p-10">
                <li>Surface: {{ gite.surface }}m² </li>
                <li>Nombre de chambres: {{ gite.nbChambres }}</li>
                <li>Nombre de lits: {{ gite.nbLits }}</li>
                <li>Animaux acceptés: {{ gite.acceptAnimaux ? 'oui' : 'non' }}</li>
                <li>Tarif Animaux: {{ gite.tarifAnimaux }}</li>
                <li>Region: {{ gite.getville().getDepartement().getRegion().nom }}</li>
                <li>Departement: {{ gite.getville().getDepartement().nom }} </li>
                <li>ville: {{ gite.getVille().nom }}</li>
            </ul>
            <div class="d-flex flex-column justify-content-start align-items-start">
                <h2>Equipements</h2>
                <div class="d-flex flex-row justify-content-start align-items-start p-10">
                    <div class="d-flex flex-column justify-content-start align-items-start">
                        <h2>Interieur</h2>
                        <ul>
                            {% for equipement in gite.getEquiperInt() %}
                                <li>{{ equipement.getNom() }}</li>
                            {% endfor %}   
                        </ul>
                    </div>
                    <div class="d-flex flex-column justify-content-start align-items-start p-10">
                        <h2>Exterieur</h2>
                        <ul>
                            {% for equipement in gite.getEquiperExt() %}
                                <li>{{ equipement.getNom() }}</li>
                            {% endfor %} 
                        </ul>
                    </div>
                </div>
            </div>
            <div class="d-flex flex-column justify-content-center align-items-start">
                <h2>service</h2>
                <ul class="d-flex flex-column justify-content-start align-items-start p-10">
                    {% for service in gite.getGiteHasService() %}
                        <li>{{ service.getNom() }}</li>
                    {% endfor %}
                </ul> 
            </div>
            <div>
                <div class="date-content flex-fill d-flex flex-row justify-content-center align-items-center">
                    <div class="m-10">
                        <select name="debut" id="debut">
                            <option value="">{{ gite.getPrix().debut|date('d-m-Y') }}</option>
                        </select>
                    </div>
                    <div class="m-10">
                        <select name="fin" id="fin">
                            <option value="">{{ gite.getPrix().fin|date('d-m-Y') }}</option>
                        </select>
                    </div>
                </div>
                <div>
                    <h2>voyageurs</h2>
                    <select name="nombre" id="nombre">
                        <option value="2">2 personnes</option>
                        <option value="3">3 personnes</option>
                        <option value="4">4 personnes</option>
                        <option value="5">5 personnes</option>
                        <option value="6">6 personnes</option>
                        <option value="7">7 personnes</option>
                        <option value="8">8 personnes</option>
                    </select>
                </div>
            </div>
            <div>
                <button class="btn btn-primary">Réservez</button>
            </div>
{% endblock %}
